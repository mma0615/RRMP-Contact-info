<aura:component description="DSF_MyToDoList_DSFApplication_Topic">

    <aura:attribute name="submitDSFApplLabel" type="String"/>
    <aura:attribute name="taskSubmittedOnLabel" type="String"/>
    <aura:attribute name="completeDSFApplLavel" type="String"/>
    <aura:attribute name="application" type="Object"/>
    <aura:attribute name="dsfConfig" type="Object"/>
    <aura:attribute name="isDateBetween" type="Boolean" default="true" />

    <aura:handler name="change" value="{!v.dsfConfig}" action="{!c.checkDates}" />

    <aura:if isTrue="{!v.isDateBetween}">
        <aura:if isTrue="{!!v.application}">
            <div data-isPending="true" class="slds-text-heading_small slds-m-top_large toDoList-item-container">
                <c:DSF_FormCircle checked="false"/>
                <div class="slds-p-left_medium toDoList-item">
                    <span>{!v.submitDSFApplLabel}</span>
                </div>
            </div>
        </aura:if>

        <aura:if isTrue="{!and(v.application.Application_Status__c == 'Pending', !v.application.Application_Submission_Date_Time__c)}">
            <div data-isPending="true" class="slds-text-heading_small slds-m-top_large toDoList-item-container">
                <c:DSF_FormCircle checked="false"/>
                <div class="slds-p-left_medium toDoList-item">
                    <span>{!v.completeDSFApplLavel}</span>
                </div>
            </div>
        </aura:if>

        <aura:if isTrue="{!and(v.application.Application_Status__c == 'Submitted', v.application.Application_Submission_Date_Time__c)}">
            <div data-isPending="false" class="slds-text-heading_small slds-m-top_large toDoList-item-container">
                <c:DSF_FormCircle checked="true"/>
                <div class="slds-p-left_medium toDoList-item">
                    <span>{!v.submitDSFApplLabel}</span>
                    <div class="slds-text-body_small slds-m-top_x-small infoBox">
                        {!v.taskSubmittedOnLabel}&nbsp;<lightning:formattedDateTime value="{!v.application.Application_Submission_Date_Time__c}"/>
                    </div>
                </div>
            </div>
        </aura:if>
    </aura:if>

</aura:component>