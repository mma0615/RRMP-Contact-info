<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global"  controller="VirtuVisitController">
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" /> 
    
    <aura:attribute name="FirstName" type="string"/>
    <aura:attribute name="LastName" type="string"/>
    <aura:attribute name="Email" type="string"/>
    <aura:attribute name="Password" type="string"/>
    <aura:attribute name="ErrorMessage" type="string"/>
    
    <div>
        <div class="registration-page">
            <div class="menu-header">
                <div class="menu-logo">
                    <img src="{!$Resource.VirtuVisit + '/VirtuVisitLogo.png'}"  />
                </div>
            </div>
            
            <div class="login-page"  style="{!'background-image: url(' + $Resource.VirtuVisit + '/PatientHeaderBGFull.jpeg' +');'}">
                <!--<div class="info">
                    <div class="info-img"></div>
                    <div class="info-message">
                        <div class="message-header center">See a Provider Now!</div>
                        <div class="message">Amwell makes it easy for you to talk to doctors, immediately, from your home. Simply log on or call 1-844-SEE-DOCS (1-844-733-3627) to connect with board-certified
                            doctors in your area.</div>
                        <div class="button">
                            <a href="">Learn More ></a>
                        </div>
                    </div>
                </div>-->
                <div class="login-details">
                    <div class="login-img">
                        <!--<img src="https://business.amwell.com/wp-content/themes/americanwell/assets/images/amwell-logo.png"  />-->
                    </div>
                    <div class="signup">
                        <span>Sign Up</span>
                        <div class="error-message">{!v.ErrorMessage}</div>
                        <div class="flex">
                            <lightning:input name="firstname" aura:id="field" label="" placeholder="First Name*" class="column1" required="true" value="{!v.FirstName}"/>
                            <lightning:input name="lastname" aura:id="field" label="" placeholder="Last Name*" class="column2" required="true" value="{!v.LastName}"/>
                        </div>
                        <lightning:input type="email" aura:id="field" name="email" label="" placeholder="Email*" class="columnfull" required="true" value="{!v.Email}"/>
                        <!--<lightning:input type="email" aura:id="field" name="confirmemail" label="" placeholder="Confirm Email*" class="columnfull" required="true"/>-->
                        <lightning:input type="password" aura:id="field" name="password" placeholder="Enter Password" required="true" value="{!v.Password}"/>
                        <div class="flex">
                            <lightning:input type="checkbox" aura:id="field" label="I agree to the following: " name="agree" required="true"/><a href="">Term of Use*</a>
                        </div>
                        <div class="buttons">
                            <a onclick="{!c.createNewContact}">Signup</a>
                        </div>
                        <br/>
                        <div class="center">
                            <a href="{!'/Connect/s/patient-login'}">I already have an account. Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</aura:component>