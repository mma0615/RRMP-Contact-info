<aura:component >
    <aura:attribute name="day" type="String"/>
    <aura:attribute name="eventList" type="Integer[]"/>
    <aura:attribute name="isEvent" type="String"/>
    <aura:attribute name="eventColor" type="String"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
     <aura:if isTrue="{!v.eventColor == 'normal'}" >
        <td style="height: 100px;" onclick="{!c.viewEventDetails}"> 
            <p>{!v.day}</p>
        </td>
    </aura:if>
    <aura:if isTrue="{!v.eventColor == 'orange'}">
        <td style="height: 100px; background-color: orange;" onclick="{!c.viewEventDetails}"> 
            <p>{!v.day}</p>
        </td>
    </aura:if>
    <aura:if isTrue="{!v.eventColor == 'blue'}">
        <td style="height: 100px; background-color: blue;" onclick="{!c.viewEventDetails}"> 
            <p>{!v.day}</p>
        </td>
    </aura:if>
   
    
</aura:component>