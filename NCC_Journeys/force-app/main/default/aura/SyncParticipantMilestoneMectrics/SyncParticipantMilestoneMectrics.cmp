 <aura:component description="Sync Participant Milestone Mectric"
                 implements="force:lightningQuickActionWithoutHeader,force:hasRecordId,force:appHostable,flexipage:availableForAllPageTypes"
                 access="global"
                 controller="journeyParticipantMilestoneServices">

    <aura:attribute name="showSpinner" type="Boolean"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <!-- spinner -->
    <aura:if isTrue="{!v.showSpinner}">
        <div class="backgroundInverse">
            <lightning:spinner alternativeText="Loading" variant="inverse">Syncing Participant Milestone Metrics...</lightning:spinner>
        </div>
        <div class="slds-text-align_center slds-text-heading_medium slds-p-top_small">Syncing Participant Milestone Metrics...</div>
    </aura:if>
</aura:component>